local module = {
	ValidInputs = {
		"dash";
		"movement";
		"slam";
		"interact";
		"quickchange";
		"inventory";
		"shoot";
		"reload"
	}
}

local userinput = game:GetService("UserInputService")
local BLOURCE = require(game:GetService("ReplicatedStorage").Resources.Blource_Main)

function module:OnLevelLoad()
	local player = game:GetService("Players").LocalPlayer
	print("load")
	player.CameraMode = Enum.CameraMode.LockFirstPerson
	userinput.MouseIconEnabled = false
	local GUI = BLOURCE:CreateGUI("A4_InGame")
	local BLOURCE = require(game:GetService("ReplicatedStorage").Resources.Blource_Main)
	local Humanoid = player.Character:FindFirstChildOfClass("Humanoid")
	local jumpEv = Humanoid.Jumping:Connect(function(active)
		if active == true then
			BLOURCE:PlaySound("suit_jump", 1, 100, true, nil)
		end
	end)
	local deathEv = Humanoid.Died:Connect(function()
		
	end)
	game:GetService("ReplicatedStorage").Resources.Events.disconnect.Event:Connect(function()
		jumpEv:Disconnect()
	end)
end

function module:OnLevelUnload()
	userinput.MouseIconEnabled = true
	print("unload")
	local player = game:GetService("Players").LocalPlayer
	local GUI = player.PlayerGui:FindFirstChild("A4_InGame")
	if GUI then
		GUI:Destroy()
	end
end

return module
